    input 
        font-size 16px
        font-weight 600
        background-color white
        padding 8px 15px
        border-radius 5px
        &placeholder 
            color #8e9aa7
        

    h2 
        font-size 34px

    h4 
        font-size 16px
        color black
        margin-bottom 28px

    header 
        position absolute
        top 0
        right 0
        left 97px
        background-color #fff
        display flex
        justify-content space-between
        align-items center
        box-shadow 0 3px 6px #f2f3f3
        padding 0 32px
        height 97px
        white-space nowrap
        .side-left,
        .side-right 
            display flex
            align-items center
            grid-gap 30px
        
        .side-right 
            .total 
                display flex
                flex-direction column
                h3 
                    margin-top 4px
                    span 
                        margin-left 6px
                    
                
            
        
        input 
            width 359px
        
        h3 
            font-size 27px
        

    aside 
        width 97px
        position fixed
        top 0
        left 0
        bottom 0
        display flex
        align-items center
        flex-direction column
        justify-content space-between
        padding 20px 0
        z-index 100
        background-color black
        .logo 
            width 58px
            height 58px
            border-radius 100px
            background-color corp
        
        .side-middle,
        .side-bottom 
            img 
                padding 7px
                width 33px
                height 33px
                &.active 
                    background-color corp
                    border-radius 5px
                
            
            imghover 
                opacity 0.47
            
        
        .side-middle 
            display flex
            align-items center
            flex-direction column
            justify-content space-between
            grid-gap 14px
        

    main 
        display grid
        grid-template-columns 1fr 1fr 1fr
        padding 33px
        margin-left 97px
        margin-top 97px
        grid-gap 18px
        .fr-3 
            grid-column 1/4
            height 100%
            .item 
                border 1px solid #dfdfdf
                border-radius 16px
                padding 25px
                background-color #fff

                
        .fr-2 
            grid-column 1/3
            height 100%
            display flex
            flex-direction column
            grid-gap 18px
            .item 
                border 1px solid #dfdfdf
                border-radius 16px
                padding 25px
            
        
        .fr-1 
            grid-column 3/4
            height 100%
            display flex
            flex-direction column
            grid-gap 18px
            .item 
                border 1px solid #dfdfdf
                border-radius 16px
                padding 25px
            
        
        .item-top 
            padding-bottom 19px
            margin-bottom 19px
            border-bottom 2px solid #f4f5f6
            display flex
            justify-content space-between
            align-items center
            img 
                box-sizing content-box
                width 14px
                height 14px
                padding 5px
                cursor pointer
            
        

    table 
        width 100%
        border none
        text-align left
        border-collapse collapse
        th,
        tr,
        td 
            transition 0.3s ease
            border none
            font-weight 700
        
        th 
            .flex 
                grid-gap 12px
            
            img 
                width 15px !important
                height 15px !important
            
            padding-bottom 17px
            color grey
        
        td 
            border-top 1px solid #f4f5f6
            padding 17px 0
        
        &.number 
            tr 
                td:nth-child(1) 
                    display none
                
                th:nth-child(1) 
                    display none
                
            
        
        &.time 
            tr 
                td:nth-child(5) 
                    display none
                
                th:nth-child(5) 
                    display none
                
            
        
        &.background 
            tr 
                background-color transparent !important
            
        

    .tumblr-div 
        display flex
        align-items center

    .tumblr 
        width 39px !important
        height 24px !important
        background-color #eaecef
        border-radius 50px !important
        min-width 39px
        padding 3px
        transition 0.3s ease
        margin-right 11px
        display flex
        align-items center
        box-shadow none
        background grey
        &hover 
            transform none
            box-shadow none
        
        div 
            background-color #fff
            width 18px
            height 18px
            border-radius 50px
            transition 0.3s ease
            margin-left -15px
        
        &.active 
            background-color corp !important
            div 
                margin-left 15px !important
            
        
        &disabled 
            opacity 0.1
        

    .grey 
        color grey
        font-weight 600

    .flex 
        display flex
        align-items center
        grid-gap 30px

    .lines 
        .line 
            margin-top 8px
            margin-bottom 24px
            height 14px
            background-color white
            border-radius 20px
            div 
                background-color corp
                overflow hidden
                height 100%
                width 65%
                border-radius 20px
            
            &last-child 
                margin-bottom 0
            
        

