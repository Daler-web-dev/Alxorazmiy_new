app-green = #e6f5f3
app-yellow = #fff6e9
app-red = #ffe9e8
black = #2b2e3f
corp = #2442fa
white = #f3f5f6
black = #2b2e3f
grey = #8e9aa7

.body-admin
    * 
        box-sizing border-box
        outline none


    body 
        padding 0
        margin 0
        font-family "SF UI Display"
        color black


    /* elements */
    .button,
    button,
    input,
    textarea 
        border none
        resize none
        font-family "SF UI Display"


    .relative 
        position relative


    .cursor 
        cursor pointer


    a 
        color black
        display contents
        text-decoration none
        &hover 
            color corp
        


    h1,
    h2,
    h3,
    h4,
    h5,
    h6 
        margin 0


    span 
        font-weight 600
        font-size 16px
        color grey


    .margin 
        height 120px


    .margin-mini 
        height 24px


    .margin-small 
        height 90px


    .btn 
        cursor pointer
        transition 0.3s ease


    .btns 
        display flex
        grid-gap 22px
        margin-top 32px


    ul 
        list-style none
        padding-left 20px
        margin 0
        &.horizontal 
            display flex
            align-items center
            li 
                margin-bottom 0
                margin-right 40px
                &last-child 
                    margin-right 0
                
            
        
        li 
            margin-bottom 13px
            font-size 20px
            font-weight 500
            color black !important
            transition 0.3s ease
            &last-child 
                margin-bottom 0
            
        


    .button,
    button 
        &.circle 
            border-radius 50px !important
            padding-left 24px
            padding-right 24px
            min-width auto
            box-shadow none !important
            border 1px solid black !important
            transition 0.3s ease !important
            &hover 
                background-color corp !important
                transform none
                color #fff
            
        
        &.button-small 
            height 40px !important
            font-size 16px !important
            // padding-left 12px
            // padding-right 12px
            // min-width auto
        
        border-radius 5px
        height 57px
        min-width 190px
        padding-left 25px
        padding-right 25px
        background linear-gradient(45deg, #005dff, #2203a2)
        display flex
        justify-content center
        align-items center
        color #fff
        cursor pointer
        font-size 20px
        font-weight 500
        box-shadow 0 3px 12px rgba(#004dff, 0.49)
        transition 0.7s ease
        white-space nowrap
        &.transparent 
            border 3px solid corp
            background transparent !important
            color black
            border-color corp
        
        &.bordered 
            box-shadow none
            border 2px solid corp
        
        &hover 
            transform translateY(-15px)
            box-shadow 0 3px 42px rgba(#004dff, 0.89)
        
        &disabled 
            cursor default
            background grey
            box-shadow none
            color white
            &hover 
                transform none
                box-shadow none
            
        


    .widget-def 
        position fixed
        z-index 4
        background-color #fff
        padding-top 44px
        padding-bottom 44px
        width 800px
        max-width calc(100% - 30px)
        left 50%
        top 50%
        border-radius 15px
        transform translate(-50%, -50%)
        text-align left
        display flex
        flex-direction column
        align-items flex-start
        justify-content flex-start
        ul 
            padding 16px 0 24px 16px
            list-style decimal
            libefore 
                display none
            
        
        .close 
            cursor pointer
            position absolute
            right 15px
            top 15px
            opacity 0.67
            width 28px
            height 28px
            display flex
            justify-content center
            align-items center
            padding 28px
            img 
                width 18px
                height 18px
            
        


    .def-block-small 
        max-width 1260px
        // width 1260px
        margin 0 auto


    .def-block 
        max-width 1520px
        // width 1520px
        margin 0 auto


    .def-block-full 
        width calc(100% - 50px)
        margin 0 auto
        .wrapper 
            max-width 100%
        


    .list-1 
        display flex
        flex-wrap wrap
        grid-gap 24px
        .item 
            display inline-block
            padding 34px 44px
            background-color #f0f0fb
            max-width 60ch
            .h2 
                padding-top 12px
                font-weight 800
            
            .description 
                padding 24px 0
            
        


    .list-3 
        .img 
            padding 0 !important
            img 
                width 100%
                border-radius 21px 21px 0 0
                height 270px
                object-fit cover
            
            .description 
                padding 20px 24px 44px
                .h3 
                    margin-bottom 8px
                
            
        


    .list-4 
        display grid
        grid-template-columns repeat(4, 1fr) !important
        grid-gap 16px !important
        grid-row-gap 44px !important
        iframe 
            width 100%
        
        .item 
            padding 0 !important
        


    sup 
        top -0.3em
        left 0.12em
        color grey


    .list-3,
    .list-4 
        display grid
        grid-template-columns repeat(auto-fit, minmax(320px, 440px))
        justify-content flex-start
        grid-gap 24px 18px


